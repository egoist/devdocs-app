{
  "private": true,
  "name": "devdocs-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps && rm -rf app/package-lock.json",
    "test": "npm run lint",
    "lint": "xo",
    "app": "electron app/index.js",
    "dist": "npm run dist:mac && npm run dist:deb && npm run dist:win",
    "dist:mac": "build --mac",
    "dist:linux": "build --linux deb tar.xz",
    "dist:win": "build --win --ia32"
  },
  "devDependencies": {
    "electron": "^1.6.10",
    "electron-builder": "^18.0.1",
    "electron-builder-squirrel-windows": "^18.0.0",
    "electron-devtools-installer": "^2.2.0",
    "eslint-config-rem": "^3.1.0",
    "minimist": "^1.2.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": "rem/prettier",
    "envs": [
      "browser"
    ]
  },
  "build": {
    "appId": "com.egoistian.devdocs-app",
    "productName": "DevDocs",
    "asar": true,
    "dmg": {
      "background": "build/background@2x.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 494,
        "height": 270
      }
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "public.app-category.developer-tools"
    }
  }
}
