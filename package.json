{
  "private": true,
  "name": "devdocs-app",
  "version": "0.6.0",
  "description": "Desktop client for devdocs.io",
  "author": {
    "name": "EGOIST",
    "email": "0x142857@gmail.com",
    "url": "https://github.com/egoist"
  },
  "license": "MIT",
  "main": "app/index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "test": "npm run lint",
    "lint": "xo",
    "app": "electron app/index.js",
    "pack": "build --dir",
    "dist": "build",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egoist/devdocs-app.git"
  },
  "keywords": [
    "devdocs",
    "app",
    "electron"
  ],
  "bugs": {
    "url": "https://github.com/egoist/devdocs-app/issues"
  },
  "homepage": "https://github.com/egoist/devdocs-app#readme",
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^18.6.2",
    "electron-devtools-installer": "^2.2.0",
    "eslint-config-rem": "^3.1.0",
    "minimist": "^1.2.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": "rem/prettier",
    "envs": [
      "browser"
    ],
    "rules": {
      "guard-for-in": 0
    }
  },
  "build": {
    "appId": "com.egoistian.devdocs",
    "productName": "DevDocs",
    "compression": "maximum",
    "asar": true,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "synopsis": "DevDocs desktop app",
      "category": "devel",
      "target": [
        "AppImage",
        "deb",
        "tar.xz"
      ]
    }
  }
}
